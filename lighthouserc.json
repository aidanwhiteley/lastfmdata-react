{
    "ci": {
        "collect": {
            "numberOfRuns": 3
        },
        "assert": {
            "preset": "lighthouse:no-pwa",
            "assertions": {
                "categories:performance": ["warn", {
                    "minScore": 0.95
                }],
                "categories:accessibility": ["warn", {
                    "minScore": 0.85
                }],
                "categories:best-practices": ["warn", {
                    "minScore": 0.90
                }],
                "categories:seo": ["warn", {
                    "minScore": 0.90
                }]
            }
        },
        "upload": {
            "target": "temporary-public-storage"
        }
    }
}